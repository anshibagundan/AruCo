<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe6cc">

        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="履歴"
            android:textSize="40sp"
            android:layout_gravity="bottom"
            android:backgroundTint="#283C6B"
            android:onClick="main_history"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:text="Aruco"
            android:textStyle="bold"
            android:textSize="80sp" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="170sp"
            android:backgroundTint="#0074A1"
            android:text="開始"
            android:textSize="60sp"
            android:onClick="main_home"/>



        <ImageView
            android:layout_width="131dp"
            android:layout_height="161dp"
            android:rotation="-40"
            app:srcCompat="@drawable/hatena" />
        <ImageView
            android:layout_width="131dp"
            android:layout_height="161dp"
            app:srcCompat="@drawable/hatena"
            android:rotation="40"
            android:layout_gravity="right"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171dp"
            android:layout_height="307dp"
            app:srcCompat="@drawable/aruco"
            android:layout_gravity="center"/>

<!--        認証ポップアップ-->
        <FrameLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.8">


            </LinearLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="450dp"
                android:layout_gravity="center"
                android:background="@drawable/popup_design">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="アカウント登録"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="70sp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/aruco" />
                    <EditText
                        android:hint="6桁コードを入力"
                        android:id="@+id/inputCode"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="10sp"
                        android:background="@drawable/edittext_rounded"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/sendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100sp"
                    android:layout_gravity="center"
                    android:text="送信"
                    android:backgroundTint="@color/black"
                    android:alpha="0.3"
                    android:onClick="getAndsaveUUID"/>
                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※6桁入力してください"
                    android:layout_gravity="center"
                    android:layout_marginTop="40sp"
                    android:textColor="#ff0000"
                    android:alpha="0.7"
                    android:textSize="12sp"
                    android:background="@drawable/underline"
                    android:visibility="gone"
                    />

            </FrameLayout>

        </FrameLayout>


    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>