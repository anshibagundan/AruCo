<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe6cc">

        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="履歴"
            android:textSize="40sp"
            android:layout_gravity="bottom"
            android:backgroundTint="#283C6B"
            android:onClick="main_history"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:text="Aruco"
            android:textStyle="bold"
            android:textSize="80sp" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="170sp"
            android:backgroundTint="#0074A1"
            android:text="開始"
            android:textSize="60sp"
            android:onClick="main_home"/>



        <ImageView
            android:layout_width="131dp"
            android:layout_height="161dp"
            android:rotation="-40"
            app:srcCompat="@drawable/hatena" />
        <ImageView
            android:layout_width="131dp"
            android:layout_height="161dp"
            app:srcCompat="@drawable/hatena"
            android:rotation="40"
            android:layout_gravity="right"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171dp"
            android:layout_height="307dp"
            app:srcCompat="@drawable/aruco"
            android:layout_gravity="center"/>

<!--        認証ポップアップ-->
        <FrameLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.8">
            </LinearLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="アカウント作成"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"/>

                <EditText
                    android:hint="6桁コードを入力"
                    android:id="@+id/inputCode"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="6"
                    />
                <Button
                    android:id="@+id/sendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70sp"
                    android:layout_gravity="center"
                    android:text="OK"
                    android:onClick="getAndsaveUUID"/>

            </FrameLayout>

        </FrameLayout>


    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>