<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe6cc">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/result_icon"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="90sp"
            android:text="ホームへ戻る"
            android:textSize="30sp"
            android:onClick="result_main"
            android:backgroundTint="#283C6B" />
        <TextView
            android:layout_width="190sp"
            android:layout_height="180sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="100sp"
            android:background="@drawable/background_text"/>
        <TextView
            android:layout_width="170sp"
            android:layout_height="180sp"
            android:layout_gravity="center"
            android:layout_marginBottom="100sp"
            android:layout_marginLeft="100sp"
            android:background="@drawable/background_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="120sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arucoクイズ"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/label" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="記憶クイズ"
                android:textSize="25sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:background="@drawable/label"
                android:textStyle="bold" />




        </LinearLayout>

<!--記憶クイズ結果表示-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="200sp"
            android:layout_marginRight="110sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="問題"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="犬の数は？"
                    android:textSize="10sp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/act1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>


<!--Arucoクイズ結果表示-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:orientation="vertical"
            android:layout_marginTop="200sp">
            <!--問１-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第1問"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/quiz1_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/quiz1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/border_text"/>

<!--            問２-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第2問"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/quiz2_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/quiz2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp" />

<!--            問3-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第3問"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/quiz3_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/quiz3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45sp"
            android:layout_height="45sp"
            app:srcCompat="@drawable/walk_icon"
            android:layout_gravity="center"
            android:layout_marginTop="90sp"
            android:layout_marginRight="90sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距離"
            android:textSize="30sp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            android:background="@drawable/border_text"
            />
        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textSize="30sp"
            android:textColor="#aa0000"
            android:layout_gravity="center"
            android:background="@drawable/background_text"
            android:layout_marginTop="90sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="130sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="振り返り"
                android:textSize="20sp"
                android:background="@drawable/border_text"
                android:layout_marginTop="160dp" />

            <TextView
                android:id="@+id/feedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading"
                android:textSize="15sp"
                android:background="@drawable/background_text"
                android:layout_marginTop="3dp" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
