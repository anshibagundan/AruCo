<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffe6cc">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/result_icon"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="90sp"
            android:text="ホームへ戻る"
            android:textSize="30sp"
            android:onClick="post_UserData"
            android:backgroundTint="#283C6B" />
        <TextView
            android:layout_width="190sp"
            android:layout_height="180sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="100sp"
            android:background="@drawable/background_text"/>
        <TextView
            android:layout_width="170sp"
            android:layout_height="180sp"
            android:layout_gravity="center"
            android:layout_marginBottom="100sp"
            android:layout_marginLeft="100sp"
            android:background="@drawable/background_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="記憶クイズ"
            android:textSize="30sp"
            android:background="@drawable/label"
            android:textStyle="bold"
            android:layout_marginTop="120sp"
            android:layout_marginRight="20sp"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arucoクイズ"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/label"
            android:layout_marginTop="120sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="190sp"
            android:layout_marginRight="120sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="問1"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200sp"
            android:layout_marginRight="80sp"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/act1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:orientation="vertical"
            android:layout_marginTop="190sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="問1"
                android:layout_weight="1"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="問2"
                android:layout_weight="1"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="問3"
                android:layout_weight="1"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="190sp"
            android:layout_marginLeft="100sp">

            <TextView
                android:id="@+id/quiz1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/quiz2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/quiz3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45sp"
            android:layout_height="45sp"
            app:srcCompat="@drawable/walk_icon"
            android:layout_gravity="center"
            android:layout_marginTop="90sp"
            android:layout_marginRight="90sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距離"
            android:textSize="30sp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            android:background="@drawable/border_text"
            />
        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textSize="30sp"
            android:textColor="#aa0000"
            android:layout_gravity="center"
            android:background="@drawable/background_text"
            android:layout_marginTop="90sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="振り返り"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:background="@drawable/border_text"
            android:layout_marginTop="160sp"/>
        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textSize="15sp"
            android:background="@drawable/background_text"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="200sp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
